<!-- Page Header -->
<% include ../partials/_header.ejs %>

<!--Edit Form-->
<div class="container col-xxl-8 px-4 py-5">
    <div class="row g-5 py-5">
        <div class="offset-md-3 col-md-6">
            <div class="row justify-content-center g-5 py-5">
                <div class="col-md-6 text-center">
                    <h2 class="heading-section"><%= title %></h2>
                </div>
            </div>

            <form class="form" method="POST">
                <div class="form-group mb-5">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter the contact name" name="name" value="<%= Contact.name %>" required>
                </div>

                <div class="form-group mb-5">
                    <label for="nameTextField">Email</label>
                    <input type="email" class="form-control" id="nameTextField" placeholder="Enter the contact email" name="email" value="<%= Contact.email %>" required>
                </div>

                <div class="form-group mb-5">
                    <label for="nameTextField">Email</label>
                    <input type="number" class="form-control" id="nameTextField" placeholder="Enter the contact number" name="number" value="<%= Contact.number %>" required>
                </div>

                <button class="btn btn-primary mb-5" type="submit">
                    <i class="fas fa-edit"></i> Submit
                </button>

                <a href="/contacts" class="btn btn-warning mb-5"> <i class="fas fa-undo"></i> Go Back</a>

            </form>
        </div>

    </div>
</div>

<!-- Page Footer -->
<% include ../partials/_footer.ejs %>